        "encryption",
        "update",
        "upgrade",
        "clear",
        "log",
        "rsync",
        "ftp",
        "ftps",
        "sftp",
        "mysqldump"
    ],
    "homepage": "https://github.com/robertsaupe/phpbat",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Robert Saupe",
            "email": "mail@robertsaupe.de",
            "homepage": "https://robertsaupe.de",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "mail@robertsaupe.de",
        "issues": "https://github.com/robertsaupe/php-json/issues"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/robertsaupe"
        },
        {
            "type": "patreon",
            "url": "https://patreon.com/robertsaupe"
        },
        {
